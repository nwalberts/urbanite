<h1>Cities</h1>
  <%= form_tag(locations_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Cities" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>

  <ul>
    <% @locations.each do |location| %>
      <li>
        <%= link_to location.name, location_path(location) %>
      </li>
    <% end %>
  </ul>

  <% if !params[:search] %>
    <%= paginate @locations %>
  <% end %>

<%= link_to "Add New City", new_location_path %>
<br />
<%= link_to "Log Out", destroy_user_session_path %>
<br />
<%= link_to "Sign Up", new_user_registration_path %>
<br />
<% if user_signed_in? %>
<%= link_to "View Profile", profile_path(@profile) %>
<% end %>

<% if current_user == nil %>
  <%= link_to "Sign In", new_user_session_path %>
<% elsif current_user.admin? %>
  <%= link_to "Users", users_path %>
<% end %>
