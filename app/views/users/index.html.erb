<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.first_name %> <%= user.last_name %> <%= user.email %>
      <% if user.admin? %>
        (Admin)
      <% else %>
        <%= button_to "Make Admin", { action: "make_admin", id: user.id }, method: :put %>
      <% end %>
      <%= button_to "Delete", user, method: :delete, data: { confirm: 'Are you sure?'} %>
    </li>
  <% end %>
</ul>
