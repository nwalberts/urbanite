<h2>Users</h2>

<ul class="user-list">
  <% @users.each do |user| %>
    <li>
      <%= user.first_name %> <%= user.last_name %> <%= user.email %>
      <% if user.admin? %>
        (Admin)
      <% else %>
        <%= button_to "Make Admin", { action: "make_admin", id: user.id }, method: :put, style: "color:black" %>
      <% end %>
      <%= button_to "Delete", user, method: :delete, data: { confirm: 'Are you sure?'}, style: "color:black" %>
    </li>
  <% end %>
</ul>
