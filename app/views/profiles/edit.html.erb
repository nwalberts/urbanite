<%= form_for @profile, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_field :bio %>
  </div>

  <div class="field">
    <%= f.label :avatar, "Avatar" %><br>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
